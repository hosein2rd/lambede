<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.lambede.lamer.activities.FailActivity">

    <ImageView
        android:id="@+id/success_waves"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/waves_up" />

    <ImageView
        android:id="@+id/success_vector"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/order_check"
        android:layout_below="@id/success_waves"/>

    <TextView
        android:id="@+id/success_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/success_title"
        android:gravity="center"
        android:textColor="@color/colorLambede"
        android:textSize="22sp"
        android:layout_below="@id/success_vector"/>

    <ImageView
        android:id="@+id/success_image_gif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/loader_gif"
        android:layout_below="@id/success_text_title"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/success_image_gif"
        android:text="شماره سفارش :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_back"
        android:text="8585858585"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@id/textView5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/success_content"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/success_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/call"
        android:textColor="@color/colorLambede"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/success_home_button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/button_blue"
        android:text="@string/back_home"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_above="@id/success_support"/>

</RelativeLayout>
