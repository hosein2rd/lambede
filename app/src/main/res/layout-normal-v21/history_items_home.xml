<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/items_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_home_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/item_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:layout_toLeftOf="@+id/item_home_image"
                android:layout_toStartOf="@+id/item_home_image"
                android:text="سفارش تمیزکاری خانه بزرگ"
                android:textColor="@color/colorLambede"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_home_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_home_image"
                android:layout_alignRight="@+id/item_home_image"
                android:layout_below="@+id/item_home_image"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="قیمت سفارش : 89000 تومان"
                android:textColor="@color/colorLambede"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_home_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_home_cost"
                android:layout_alignRight="@+id/item_home_cost"
                android:layout_below="@+id/item_home_cost"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="جزئیات سفارش : 2 کارگر مرد، 8 ساعت تمیزکاری"
                android:textColor="@color/colorLambede"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_home_addrress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_home_date"
                android:layout_alignRight="@+id/item_home_date"
                android:layout_below="@+id/item_home_date"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="آدرس : پاسداران، نگارستان 9، بن بست مینو، پلاک 1 واحد 2"
                android:textColor="@color/colorLambede"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>